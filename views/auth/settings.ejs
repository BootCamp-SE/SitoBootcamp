<!DOCTYPE html>
<html lang="it">

<%- include('../partials/header.ejs') %>

<link rel="stylesheet" href="/css/login.css">
<script src="/JS/setting.js" defer></script>

<% const checkPolicy = (policy = []) => {
	var check = false;
	policy.forEach(p => {
		if (userPolicy.includes(p)) check = true;
	});
	return check;
} %>

<body>
  <%- include('../partials/navbar.ejs') %>
  <h1><%= title %></h1>
  <form action="/userapi">
    <div class="container fields">
      <label for="rank"><b>Rango</b></label>
      <br>
      <select class="settingLock" type="text" name="rank">
        <% ranks.forEach((rank) => { %>
            <option value="<%= rank.tag %>"><%= rank.name %></option>  
        <% }); %>
      </select>
      <br>

      <label for="specialization"><b>Specializzazione</b></label>
      <br>
      <select class="settingLock" name="specialization">
        <% specialization.forEach((s) => { %>
            <option value="<%= s %>"><%= s %></option>
        <% }); %>
      </select>
      <br>

      <label for="equipage"><b>Equipaggio</b></label>
      <br>
      <select class="settingLock" name="equipage">
        <% for(let x = 0; x < 10; x++) { %>
          <option value="<%= x %>"><%= x %></option>  
        <% } %>
      </select>
      <br>

      <label for="reservecrew"><b>Equipaggio di riserva</b></label>
      <br>
      <select class="settingLock" name="reservecrew">
        <% for(let x = 0; x < 10; x++) { %>
          <option value="<%= x %>"><%= x %></option>  
        <% } %>
      </select>
      <br>

      <label for="iddiscord"><b>ID Discord</b></label>
      <br>
      <input class="settingLock" type="text" placeholder="Inserire ID Discord" name="iddiscord" value="<%= "test" %>">
      <br>

      <label for="namediscord"><b>Nome Discord</b></label>
      <br>
      <input class="setting" type="text" placeholder="Inserire Nome Discord" name="namediscord" value="<%= "test" %>">
      <br>

      <label for="idsteam"><b>ID Steam</b></label>
      <br>
      <input class="settingLock" type="text" placeholder="Inserire ID Steam" name="idsteam" value="<%= "test" %>">
      <br>

      <label for="namesteam"><b>Nome Steam</b></label>
      <br>
      <input class="setting" type="text" placeholder="Inserire Nome Steam" name="namesteam" value="<%= "test" %>">
      <br>

      <label for="notepublic"><b>Note Pubbliche</b></label>
      <br>
      <input class="setting" type="text" placeholder="Parlami di te" maxlength="255" name="notepublic" value="<%= "test" %>">
      <br>

      <% if(auth && (isAdmin || checkPolicy(['manageruser']))) {%> 
        <label for="noteprivate"><b>Note Private</b></label>
        <br>
        <input class="settingInvisible" type="text" placeholder="Cosa hai da dire su di lui" maxlength="255" name="noteprivate" value="<%= "test" %>">
      <% } %>  
      <br>

      <button type="submit">Salva</button>
      <div id="save-feedback"></div>
    </div>
  </form>
</body>
<%- include('../partials/footer.ejs') %>
</html>